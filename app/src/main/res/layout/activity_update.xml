<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateActivity">

    <EditText
        android:id="@+id/edtNamaBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Barang" />

    <EditText
        android:id="@+id/edtImageBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image Barang" />

    <EditText
        android:id="@+id/edtNDeskripsiBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deskripsi Barang" />

    <EditText
        android:id="@+id/edtHargaBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Barang" />

    <EditText
        android:id="@+id/edtStokBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stok Barang" />

    <Button
        android:id="@+id/btnKirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Data" />

</LinearLayout>